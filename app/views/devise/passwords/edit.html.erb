<div class="glass home-container reset-password">
  <div class="home-container-content">
    <!--[if lt IE 9]>
      <div class="legacy-ie-fix"></div>
    <![endif]-->
    <div class="columns">
      <%= render 'logo' %>
    </div>

    <main class="columns">
      <h1><%= t('devise.passwords.edit.change_your_password', locale: active_ui_locale) %></h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <%= hidden_field_tag :redirect_url, @redirect_url %>

        <% if resource.errors.any? %>
          <ul class="errors">
            <% resource.errors.messages.values.flatten.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <div class="row">
          <div class="small-5 columns">
            <label for="user_password" class="text-right middle">
              <%= t('activerecord.attributes.user.password', locale: active_ui_locale) %>:
            </label>
          </div>
          <div class="small-6 columns end password-field">
            <%= f.password_field :password, required: false %>
          </div>
        </div>

        <div class="row">
          <div class="small-7 small-offset-5 columns end">
            <div class="form-actions">
              <%= f.button :button, class: 'button', type: 'submit' do %>
                <%= t('devise.passwords.edit.change_your_password', locale: active_ui_locale) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </main>
  </div>
</div>
