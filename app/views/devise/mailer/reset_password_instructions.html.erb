<table border="0" cellspacing="0" cellpadding="0" width="100%" style="width:100%">
  <tr>
    <td style="background:white;padding:24pt;border-radius: 7px;box-shadow: 0px 5px 18px 2px rgba(0, 0, 0, 0.15);">
      <table border="0" cellspacing="0" cellpadding="0"
    width="100%" style="width:100%;">
        <tr>
          <td>
            <span style="font-size:11.5pt;font-family: 'Lucida Grande', 'Segoe', Arial, sans-serif;color:#333333"><b><%= t('devise.mailer.reset_password_instructions.greeting', locale: @user.ui_locale,
                                                              recipient: @user.full_name.strip) %></b></span>
          </td>
        </tr>
        <tr>
          <td width="100%" style="width:100%;padding:0;height:24pt">
            <p>
              <%= t('devise.mailer.reset_password_instructions.instruction', locale: @user.ui_locale) %>
              <br />
              <br />

              <%= t('devise.mailer.reset_password_instructions.instruction_2', locale: @user.ui_locale) %>

              <%= t('devise.mailer.reset_password_instructions.instruction_3', locale: @user.ui_locale) %>
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td style="padding:24pt 0 0 0;">
      <div align="center">
        <table width="100%" border="0" cellspacing="0" cellpadding="0" align="center">
          <tr>
            <td align="center">
              <table border="0" cellspacing="0" cellpadding="0" align="center">
                <tr>
                  <td align="center" style="box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.5);border-radius: 3px;" bgcolor="#90c062"><a href="<%= @resource.forward_to_url_with_token(reset_password_token: @token).presence || edit_password_url(@resource, reset_password_token: @token, viewer_layout: @resource.try(:viewer_layout), redirect_url: @resource.try(:redirect_url)) %>" target="_blank" style="font-size:12pt;font-family: 'Lucida Grande', 'Segoe', Arial, sans-serif;color:white;text-decoration:none;text-underline:none;border-radius: 3px; padding: 16px 0; border: 1px solid #90c062; display: inline-block;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= t('devise.mailer.reset_password_instructions.action', locale: @user.ui_locale).upcase %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
</table>
