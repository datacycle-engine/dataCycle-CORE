<%= render 'data_cycle_core/contents/grid/attributes/warnings', content: content %>
<%= tag.div(render('data_cycle_core/contents/viewers/shared/buttons', local_assigns), class: 'buttons') %>

<% I18n.with_locale(content.first_available_locale) do %>

  <%= link_to thing_path(content), title: t('actions.show', locale: active_ui_locale).capitalize, target: :_blank, class: "show-link" do %>
    <%= tag.span "#{content.title} (#{I18n.locale.to_s})", class: 'name' if content.try(:title).present? %>
  <% end if can?(:show, content) %>

<% end %>
