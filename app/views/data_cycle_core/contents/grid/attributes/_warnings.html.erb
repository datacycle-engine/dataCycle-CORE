<% I18n.with_locale(local_assigns.fetch(:locale, I18n.locale)) do %>
  <% if content.content_warnings? %>
    <% if local_assigns[:text] %>
      <div class="content-warning-text callout <%= content_warning_class(content) %>">
        <%= content_warning_text(content) %>
      </div>
    <% else %>
      <%= tag.i class: "fa fa-exclamation-triangle #{content_warning_class(content)}",
      aria_hidden: true,
      data: {
        dc_tooltip: content_warning_text(content),
        title: content_warning_text(content)
      } %>
    <% end %>
  <% end %>
<% end %>
