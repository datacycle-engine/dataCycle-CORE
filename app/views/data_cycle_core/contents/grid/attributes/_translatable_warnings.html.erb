<div class="translatable-field-container">
  <span class="translatable-field linked-content-warnings active <%= locale.to_s %>">
    <%= render 'data_cycle_core/contents/grid/attributes/warnings_icon', content: content, locale: locale %>
  </span>

  <% I18n.available_locales.except(locale.to_sym).each do |a_locale| %>
    <span class="translatable-field linked-content-warnings remote-render <%= a_locale.to_s %>"
      data-remote-path="data_cycle_core/contents/grid/attributes/warnings_icon"
      data-remote-options="<%= to_query_params({ content: content, locale: a_locale }).to_json %>">
    </span>
  <% end %>
</div>
