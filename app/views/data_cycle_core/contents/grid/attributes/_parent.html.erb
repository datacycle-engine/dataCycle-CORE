<div class="type <%= item.template_name.downcase %>">
  <div class="infoRow parent">
    <%= render 'data_cycle_core/shared/icon', icon_class: item.try(:icon_class), icon_type: item.try(:icon_type) %>

    <% I18n.with_locale(item.first_available_locale(local_assigns[:language], active_ui_locale)) do %>
      <span class="title" title="<%= item.title %>"><%= item.title %></span>
    <% end %>
  </div>
</div>
