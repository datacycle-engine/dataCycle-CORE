<%= render 'data_cycle_core/contents/grid/default', local_assigns do %>
  <%= yield_content!(:contents_grid_bild) %>

  <% if thing_thumbnail_url(item).present? %>
    <div class="image-thumbnail">
      <img style="aspect-ratio: <%= aspect_ratio(item) %>;" data-src="<%= thing_thumbnail_url(item) %>" alt="<%= item.try(:title) %>" class="lazyload" />
    </div>
  <% end %>
<% end %>
