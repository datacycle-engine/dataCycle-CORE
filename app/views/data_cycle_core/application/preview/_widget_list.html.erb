<% if DataCycleCore::Feature::Preview.enabled? && can?(:show, :preview) %>
  <div class="preview-widget-list">
    <% DataCycleCore::Feature::Preview.available_widgets(content.id, active_ui_locale).each do |k,v| %>
      <a href="<%= v %>" data-dc-tooltip="<%= t("actions.copy_link_to_x_to_clipboard", data: t("common.widgets.#{k}", locale: active_ui_locale), locale: active_ui_locale) %>" class="copy-to-clipboard right" data-value="<%= v %>">
        <%= preview_icon(k) %>
      </a>
    <% end %>
  </div>
<% end %>
