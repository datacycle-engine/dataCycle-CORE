<a data-toggle="download_<%= content.id %>"
   class="<%= 'button-prime small ' unless content.class.to_s == 'DataCycleCore::StoredFilter' %>download-content-link"
   data-dc-tooltip="<%= t('actions.download_content', locale: active_ui_locale) %>">
  <i class="fa fa-download" aria-hidden="true"></i>
</a>

<div class="reveal download-content-reveal"
     id="download_<%= content.id %>"
     data-reveal>
  <div class="new_content_form_title reveal-header"><%= t('actions.download_content', locale: active_ui_locale) %></div>

  <div class="new-content-form remote-render"
         id="<%= content.id %>_download"
         data-remote-path="data_cycle_core/application/downloads/forms/content"
         data-remote-options="<%= to_query_params({ content: content }).to_json %>">
  </div>

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
